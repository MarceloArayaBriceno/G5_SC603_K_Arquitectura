@model APS.Data.Models.Producto
@{
    ViewData["Title"] = "Editar Producto";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-5">
    <h2 class="text-center mb-4">Editar Producto</h2>
    <div class="card shadow p-4">
        <form asp-action="Edit">
            <input type="hidden" asp-for="IdProducto" />
            <div class="form-group">
                <label for="Nombre">Nombre</label>
                <input asp-for="Nombre" class="form-control" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="Descripcion">Descripción</label>
                <textarea asp-for="Descripcion" class="form-control"></textarea>
                <span asp-validation-for="Descripcion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="Precio">Precio</label>
                <input asp-for="Precio" class="form-control" />
                <span asp-validation-for="Precio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="Stock">Stock</label>
                <input asp-for="Stock" class="form-control" />
                <span asp-validation-for="Stock" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="RutaImagen">Ruta Imagen</label>
                <input asp-for="RutaImagen" class="form-control" />
                <span asp-validation-for="RutaImagen" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Guardar Cambios</button>
            <a href="@Url.Action("Index")" class="btn btn-secondary">Cancelar</a>
        </form>
    </div>
</div>
