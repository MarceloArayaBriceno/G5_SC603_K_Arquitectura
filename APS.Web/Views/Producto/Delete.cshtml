@model APS.Data.Models.Producto
@{
    ViewData["Title"] = "Eliminar Producto";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-5">
    <h2 class="text-center text-danger mb-4">Eliminar Producto</h2>
    <div class="alert alert-warning">
        <p>¿Estás seguro de que deseas eliminar el producto <strong>@Model.Nombre</strong>?</p>
    </div>
    <form asp-action="DeleteConfirmed">
        <input type="hidden" asp-for="IdProducto" />
        <button type="submit" class="btn btn-danger">Eliminar</button>
        <a href="@Url.Action("Index")" class="btn btn-secondary">Cancelar</a>
    </form>
</div>
