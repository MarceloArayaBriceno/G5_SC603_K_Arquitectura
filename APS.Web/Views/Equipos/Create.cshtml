@{
    ViewData["Title"] = "Crear Equipo - Computek";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@model APS.Data.Models.Equipo

<div class="container d-flex justify-content-center align-items-center mt-5">
    <div class="card p-4" style="width: 100%; max-width: 600px; background-color: #0C3C60; color: #FFF; border-radius: 15px;">
        <h2 class="text-center mb-4" style="color: #AADFB2;">Crear Equipo</h2>

        <form asp-action="Create" method="post">
            <div class="mb-3">
                <label asp-for="Marca" class="form-label" style="color: #FFF;">Marca</label>
                <input asp-for="Marca" class="form-control" style="border-radius: 10px;" />
                <span asp-validation-for="Marca" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Modelo" class="form-label" style="color: #FFF;">Modelo</label>
                <input asp-for="Modelo" class="form-control" style="border-radius: 10px;" />
                <span asp-validation-for="Modelo" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="NombreCliente" class="form-label" style="color: #FFF;">Nombre del Cliente</label>
                <input asp-for="NombreCliente" class="form-control" style="border-radius: 10px;" />
                <span asp-validation-for="NombreCliente" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="MotivoIngreso" class="form-label" style="color: #FFF;">Motivo de Ingreso</label>
                <textarea asp-for="MotivoIngreso" class="form-control" style="border-radius: 10px;"></textarea>
                <span asp-validation-for="MotivoIngreso" class="text-danger"></span>
            </div>

            <div class="form-check mb-3">
                <input asp-for="GarantiaConLocal" class="form-check-input" type="checkbox" />
                <label asp-for="GarantiaConLocal" class="form-check-label" style="color: #FFF;">Garantía con Local</label>
                <span asp-validation-for="GarantiaConLocal" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="ContraseñaEquipo" class="form-label" style="color: #FFF;">Contraseña del Equipo</label>
                <input asp-for="ContraseñaEquipo" class="form-control" style="border-radius: 10px;" />
                <span asp-validation-for="ContraseñaEquipo" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Descripcion" class="form-label" style="color: #FFF;">Descripción</label>
                <textarea asp-for="Descripcion" class="form-control" style="border-radius: 10px;"></textarea>
                <span asp-validation-for="Descripcion" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="FechaIngreso" class="form-label" style="color: #FFF;">Fecha de Ingreso</label>
                <input asp-for="FechaIngreso" class="form-control" style="border-radius: 10px;" />
                <span asp-validation-for="FechaIngreso" class="text-danger"></span>
            </div>

            <div class="text-center">
                <button type="submit" class="btn" style="background-color: #AADFB2; color: #0C3C60; font-weight: bold; border-radius: 10px; padding: 10px 20px;">Guardar</button>
            </div>
        </form>

        <div class="text-center mt-3">
            <a asp-action="Index" style="color: #83CCCA; text-decoration: none;">Volver a la lista</a>
        </div>
    </div>
</div>
