@{
    ViewData["Title"] = "Inicio - Computek";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@model AprobacionesViewModel

<style>
    .page-container {
        background: linear-gradient(90deg, #4456E4, #DF818F, #4456E4);
        background-size: 400% 400%;
        animation: gradientAnimation 15s ease infinite;
        min-height: 91vh;
        display: flex;
        justify-content: center;
        align-items: center;
        padding: 20px;
    }

    @@keyframes gradientAnimation {
        0% {
            background-position: 0% 50%;
        }

        50% {
            background-position: 100% 50%;
        }

        100% {
            background-position: 0% 50%;
        }
    }

    .form-container {
        background-color: #f8f9fa;
        border: 1px solid #ddd;
        border-radius: 8px;
        padding: 20px;
        max-width: 600px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

    .form-title {
        color: #0C3C60;
        font-weight: bold;
        text-align: center;
    }

    .form-check-label {
        color: #555;
        font-size: 16px;
    }

    .btn-submit {
        display: block;
        width: 100%;
        background-color: #0C3C60;
        color: white;
        font-weight: bold;
        border-radius: 8px;
        padding: 10px;
        margin-top: 15px;
        transition: background-color 0.3s ease;
    }

        .btn-submit:hover {
            background-color: #094050;
        }
</style>


<div class="page-container">
    <div class="form-container">
        <h2 class="form-title mb-4">Verificar Criterios de Aprobación</h2>

        <form asp-action="VerificarAprobaciones" method="post">
            <div class="form-group mb-3">
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" asp-for="EstadoFisico" id="EstadoFisico" />
                    <label class="form-check-label" for="EstadoFisico">
                        El equipo no presenta daños visibles graves.
                    </label>
                </div>
            </div>
            <div class="form-group mb-3">
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" asp-for="MarcaAprobada" id="MarcaAprobada" />
                    <label class="form-check-label" for="MarcaAprobada">
                        La marca del equipo está en la lista de marcas aprobadas.
                    </label>
                </div>
            </div>
            <div class="form-group mb-3">
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" asp-for="SinHumedadCalor" id="SinHumedadCalor" />
                    <label class="form-check-label" for="SinHumedadCalor">
                        El equipo no presenta rastros de humedad o exposición a calor excesivo.
                    </label>
                </div>
            </div>
            <div class="form-group mb-3">
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" asp-for="ProcesadorCompatible" id="ProcesadorCompatible" />
                    <label class="form-check-label" for="ProcesadorCompatible">
                        El procesador es de una generación compatible.
                    </label>
                </div>
            </div>
            <div class="form-group mb-3">
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" asp-for="NoObsoleto" id="NoObsoleto" />
                    <label class="form-check-label" for="NoObsoleto">
                        El equipo no ha sido declarado obsoleto por el fabricante.
                    </label>
                </div>
            </div>
            <button type="submit" class="btn btn-submit">Validar Aprobaciones</button>
        </form>
    </div>
</div>
