@model APS.Data.Models.User

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1 class="mb-4">Delete User</h1>

<div class="card shadow mb-4">
    <div class="card-header bg-danger text-white">
        <h4 class="card-title mb-0">Confirm Deletion</h4>
    </div>
    <div class="card-body">
        <h5 class="text-danger">Are you sure you want to delete this user?</h5>
        <dl class="row mt-3">
            <dt class="col-sm-3 fw-bold">
                @Html.DisplayNameFor(model => model.Username)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Username)
            </dd>

            <dt class="col-sm-3 fw-bold">
                @Html.DisplayNameFor(model => model.Password)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Password)
            </dd>

            <dt class="col-sm-3 fw-bold">
                @Html.DisplayNameFor(model => model.Email)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Email)
            </dd>

            <dt class="col-sm-3 fw-bold">
                @Html.DisplayNameFor(model => model.CreatedAt)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.CreatedAt)
            </dd>

            <dt class="col-sm-3 fw-bold">
                @Html.DisplayNameFor(model => model.Description)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Description)
            </dd>
        </dl>
    </div>
    <div class="card-footer d-flex justify-content-end">
        <form asp-action="Delete" class="me-2">
            <input type="hidden" asp-for="UserId" />
            <button type="submit" class="btn btn-danger">Delete</button>
        </form>
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>
</div>
