@model IEnumerable<APS.Data.Models.Factura>
@{
    ViewData["Title"] = "Lista de Facturas";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-5">
    <h2 class="text-center mb-4">Lista de Facturas</h2>
    <a href="@Url.Action("Create")" class="btn btn-primary mb-3">Agregar Nueva Factura</a>

    <div class="card mb-4">
        <div class="card-header">
            <i class="fas fa-table me-1"></i>
            Tabla de Facturas
        </div>
        <div class="card-body">
            <table class="table table-striped table-hover" id="TablaFacturas">
                <thead class="thead-dark">
                    <tr>
                        <th>Cliente</th>
                        <th>Dirección</th>
                        <th>Fecha</th>
                        <th>Total</th>
                        <th>Total con IVA (13%)</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var factura in Model)
                    {
                        var totalConIVA = factura.Total * 1.13m; // Calcular el total con IVA
                        <tr>
                            <td>@factura.NombreCliente</td>
                            <td>@factura.DireccionCliente</td>
                            <td>@factura.Fecha.ToString("dd/MM/yyyy")</td>
                            <td>@factura.Total.ToString("C")</td>
                            <td>@totalConIVA.ToString("C")</td>
                            <td>
                                <a href="@Url.Action("Detalle", new { id = factura.FacturaID })" class="btn btn-sm btn-info">Ver Detalle</a>
                                <a href="@Url.Action("Edit", new { id = factura.FacturaID })" class="btn btn-sm btn-warning">Editar</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
