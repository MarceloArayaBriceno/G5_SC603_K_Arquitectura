@model IEnumerable<APS.Data.Models.Equipo>
@{
    ViewData["Title"] = "Lista de Equipos";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-5">
    <h2 class="text-center mb-4">Lista de Equipos</h2>
    <a href="@Url.Action("Create")" class="btn btn-primary mb-3">Agregar Nuevo Equipo</a>

    <div class="card mb-4">
        <div class="card-header">
            <i class="fas fa-table me-1"></i>
            Tabla de Equipos
        </div>
        <div class="card-body">
            <table class="table table-striped table-hover" id="TablaEquipos">
                <thead class="thead-dark">
                    <tr>
                        <th>ID</th>
                        <th>Marca</th>
                        <th>Modelo</th>
                        <th>Nombre Cliente</th>
                        <th>Motivo Ingreso</th>
                        <th>Contraseña Equipo</th>
                        <th>Descripción</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var equipo in Model)
                    {
                        <tr>
                            <td>@equipo.EquipoId</td>
                            <td>@equipo.Marca</td>
                            <td>@equipo.Modelo</td>
                            <td>@equipo.NombreCliente</td>
                            <td>@equipo.MotivoIngreso</td>
                            <td>@equipo.ContraseñaEquipo</td>
                            <td>@equipo.Descripcion</td>
                            <td>
                                <a href="@Url.Action("Edit", new { id = equipo.EquipoId })" class="btn btn-sm btn-warning">Editar</a>
                                <a href="@Url.Action("Delete", new { id = equipo.EquipoId })" class="btn btn-sm btn-danger">Eliminar</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
